{% block title %}Hello AnnonceController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ☆*: .｡. o(≧▽≦)o .｡.:*☆ 🤠</h1>
    </div>

    <br>

    <table>
        <tr>
            <td><strong>ID ️✌</strong></td>
            <td><strong>Titre🦞</strong></td>
            <td><strong>Contenu👺</strong></td>
            <td><strong>Prix🐔</strong></td>
            <td><strong>Code Postal🗿</strong></td>
            <td><strong>Date de création🌞</strong></td>
        </tr>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.titre }}</td>
                <td>{{ annonce.contenu }}</td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.codePostal }}</td>
                <td>{{ annonce.dateCreation.format('Y-m-d H:i:s') }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}